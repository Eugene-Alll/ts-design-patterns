{
    "compilerOptions": {
        "module": "ES6",
        "charset": "utf-8",
        "newLine": "LF",
        "listFiles": false,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "watch": true,
        "pretty": true,
        "target": "es6",
        "outDir": "develop",
        "stripInternal": true
    },
    "compileOnSave": true,
    "importHelpers": true,
    "include": [
        "public/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "develop"
    ]
}